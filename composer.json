{
    "name": "raxos/foundation",
    "description": "Base stuff for all Raxos libraries.",
    "license": "mit",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "type": "library",
    "authors": [
        {
            "name": "Bas Milius",
            "email": "bas@mili.us"
        }
    ],
    "autoload": {
        "files": [
            "src/Raxos/Foundation/functions.php"
        ],
        "psr-4": {
            "Raxos\\Foundation\\": "src/Raxos/Foundation"
        }
    },
    "config": {
        "platform": {
            "php": "8.4"
        },
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../*",
            "symlink": true
        }
    ],
    "require": {
        "ext-dom": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-simplexml": "*",
        "jetbrains/phpstorm-attributes": "^1.2"
    },
    "require-dev": {
        "pestphp/pest": "v3.7.1"
    }
}
